{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile OpenGL",
            "type": "process",
            "command": "g++",
            "args": [
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-g",
                "${file}",
                "-I\"C:\\MinGW\\freeglut\\include\"",
                "-L\"C:\\MinGW\\freeglut\\lib\\x64\"",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run OpenGL",
            "type": "process",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": ["Compile OpenGL"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}